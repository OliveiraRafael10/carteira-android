<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white">

        <!-- Descrição principal -->
        <TextView
            android:id="@+id/textViewLancamentoDescricaoLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIÇÃO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Linha com Categoria | Valor | Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

                <TextView
                    android:id="@+id/textViewLancamentoCategoriaLista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CATEGORIA"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textViewLancamentoValorLista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 0,00"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewLancamentoDataLista"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00/00/0000"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:textColor="#000000" />
        </LinearLayout>
</LinearLayout>
